@model RolModel

@{
    ViewData["Title"] = "Borrar Roles";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="RolDeleted" asp-controller="Rol">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Name" placeholder="Nombre del Rol" readonly>
        <label asp-for="Name">Nombre del Rol</label>
    </div>

    <button class="btn btn-outline-danger">Borrar</button>
    <a class="btn btn-outline-secundary" asp-action="RolList" asp-controller="Rol">Regresar</a>
</form>
